platform :ios, '11.0'
workspace 'Lunarrr'

inhibit_all_warnings!
use_frameworks!

def app

  # Architecture
  pod 'ReactorKit'

  # Networking
  pod 'Alamofire'
  pod 'Moya'
  pod 'Moya/RxSwift'

  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxCodable'
  pod 'RxDataSources'
  pod 'RxGesture'
  pod 'RxKeyboard'
  pod 'Differentiator'

  # UI
  pod 'SnapKit'
#  pod 'SideMenu'
  pod 'NVActivityIndicatorView'

  # Logging
  pod 'SwiftyBeaver'
  pod 'Umbrella'
  pod 'Umbrella/Firebase'

  # Transition
  pod 'Hero'

  # SDK
  pod 'Firebase/Core'
  pod 'Fabric'
  pod 'Crashlytics'

  # OAuth
#  pod 'FBSDKLoginKit'
#  pod 'GoogleSignIn'

  # Misc.
  pod 'Scope'
  pod 'SwiftLint'
  pod 'Swinject'
  pod 'KeychainAccess'
end

target 'Lunarrr' do
  app
end
