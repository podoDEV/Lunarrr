platform :ios, '11.0'
workspace 'Lunarrr'

inhibit_all_warnings!
use_frameworks!

def app

  # Networking
  pod 'Alamofire'
  pod 'Moya'
  pod 'Moya/RxSwift'

  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxCodable'
  pod 'RxDataSources'
  pod 'RxGesture'
  pod 'RxKeyboard'
  pod 'Differentiator'

  # Logging
  pod 'SwiftyBeaver'
  pod 'Umbrella'
  pod 'Umbrella/Firebase'

  # SDK
  pod 'Firebase/Core'
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'RealmSwift'

  # Misc.
  pod 'Scope'
  pod 'SwiftLint'
  pod 'Swinject'
  pod 'KeychainAccess'
end

target 'Lunarrr' do
  app
end
