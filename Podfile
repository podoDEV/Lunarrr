platform :ios, '11.0'
workspace 'Lunarrr'

inhibit_all_warnings!
use_frameworks!

def app

  # Networking
  pod 'Alamofire'
  pod 'Moya'

  # Logging
  pod 'SwiftyBeaver'
  pod 'Umbrella'
  pod 'Umbrella/Firebase'

  # SDK
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Firebase/Core'
  pod 'Firebase/Analytics'

  # DB
  pod 'RealmSwift'

  # Misc.
  pod 'Scope'
  pod 'SwiftLint'
  pod 'KeychainAccess'
  pod 'lottie-ios'
end

target 'Lunarrr' do
  app
end
